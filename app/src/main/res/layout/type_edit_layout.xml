<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:id="@+id/Type_Name"
        android:hint="@string/type_name_hint" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum=".9"
        android:orientation="horizontal"
        android:layout_below="@id/Type_Name"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Type"
            android:id="@+id/Type_delete"
            android:layout_gravity="bottom"
            android:layout_below="@+id/Type_Name"
            android:layout_alignParentRight="true"
            android:layout_weight=".3"
            android:background="@drawable/delete_button_trans"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/cancel_Button"
            android:layout_gravity="bottom"
            android:layout_below="@+id/Place_Address"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignRight="@+id/Place_Name"
            android:layout_alignEnd="@+id/Place_Name"
            android:background="@drawable/delete_button_trans"
            android:layout_weight=".3"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Edit"
            android:id="@+id/Type_Button"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom"
            android:layout_below="@+id/Place_Address"
            android:layout_alignRight="@+id/Place_Name"
            android:layout_alignEnd="@+id/Place_Name"
            android:background="@drawable/submit_trans"
            android:layout_weight=".3"/>

    </LinearLayout>


</RelativeLayout>