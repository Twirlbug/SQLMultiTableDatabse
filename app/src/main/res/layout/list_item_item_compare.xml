<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:background="@color/Mint"
    >


    <TextView
        android:id="@+id/list_item_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textStyle="bold"
        android:textColor="@color/Black"
        tools:text="Item Name"
        />

    <TextView
        android:id="@+id/at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textStyle="bold"
        android:textColor="@color/Black"
        android:text="@string/forperson"
        android:layout_toRightOf="@id/list_item_name_text_view"
        />

    <TextView
        android:id="@+id/list_item_consumer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Black"
        android:padding="4dp"
        android:textStyle="bold"
        tools:text="Consumer"
        android:layout_toRightOf="@id/at"
        />





    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_name_text_view"
        android:id="@+id/set">

        <TextView
            android:id="@+id/list_item_boughtby_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Dark_Mint"
            android:padding="4dp"
            android:text="Bought by" />

        <TextView
            android:id="@+id/list_item_Buyer_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Dark_Mint"
            android:padding="4dp"
            tools:text="Buyer"
            android:layout_toRightOf="@id/list_item_boughtby_text_view"/>

        <TextView
            android:id="@+id/for2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Dark_Mint"
            android:padding="4dp"
            android:text="for "
            android:layout_toRightOf="@id/list_item_Buyer_text_view"/>

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Dark_Mint"
            android:padding="4dp"
            android:layout_toRightOf="@id/for2"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Dark_Mint"
        android:padding="4dp"
        android:text="Date of Purchase"
        android:layout_below="@id/set"
        />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gifted_checkbox"
        android:layout_below="@+id/set"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gifted"
        android:text="Gifted"
        android:padding="4dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/gifted_checkbox"
        android:layout_below="@+id/set"/>



</RelativeLayout>