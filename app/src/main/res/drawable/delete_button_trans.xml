<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient android:startColor="@color/Light_Red"
                android:endColor="@color/Light_Red"
                android:angle="270" />
            <corners android:radius="3dp" />
            <stroke android:width="5px" android:color="@color/Black" />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient android:startColor="@color/Pale_Blue"
                android:endColor="@color/Pale_Blue"
                android:angle="270" />
            <corners android:radius="3dp" />
            <stroke android:width="5px" android:color="@color/Black" />
        </shape>
    </item>
</selector>